{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "strict": true,
    "importHelpers": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "removeComments": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "scripthost",
      "dom.iterable",
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
